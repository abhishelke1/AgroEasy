<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Top Section with App Name, Menu, and Notification -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/teal"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/rounded_icon_background"
                android:src="@drawable/img_11"
                android:scaleType="fitCenter"
                android:contentDescription="Menu Icon"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGROEASY"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_icon_background"
                android:contentDescription="Notification Icon"
                android:src="@drawable/img_12" />
        </RelativeLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_14"
                android:contentDescription="Search" />

            <EditText
                android:id="@+id/etSearchCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search any categories"
                android:background="@null"
                android:textColor="@android:color/black"
                android:paddingStart="8dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView for displaying Pesticides products -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />
</LinearLayout>
