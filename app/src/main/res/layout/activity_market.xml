<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title for the Table -->
        <TextView
            android:id="@+id/tvTableTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Rates"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#E0E0E0" />

        <!-- TableLayout to display products -->
        <TableLayout
            android:id="@+id/productTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle">

            <!-- Header Row -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#CCCCCC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Rate"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#CCCCCC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum Rate"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#CCCCCC" />
            </TableRow>

            <!-- Rows for Products -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corn"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Min Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Max Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wheat"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Min Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Max Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />
            </TableRow>

            <!-- Add similar rows for other products -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rice"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Min Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Max Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soybean"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Min Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Max Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrots"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Min Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Max Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green Peas"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Min Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Max Rate"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:gravity="center" />
            </TableRow>


        </TableLayout>

    </LinearLayout>
</ScrollView>
