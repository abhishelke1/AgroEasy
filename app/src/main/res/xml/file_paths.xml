<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- For cached images -->
    <cache-path
        name="images"
        path="." />

    <!-- Grant access to files saved in the app's external files directory -->
    <external-path
        name="shared_images"
        path="Android/data/${applicationId}/files/Pictures/" />
</paths>
